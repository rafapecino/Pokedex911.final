<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokedex911.DetallePokemonActivity">

    <TextView
        android:id="@+id/nombrePokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Nombre del Pokémon"
        android:textSize="24sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/fotoImageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tipoPokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrePokemonTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Tipo del Pokémon"
        android:textSize="18sp" />

    <Button
        android:id="@+id/favoritosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="413dp"
        android:text="Añadir a favoritos" />

    <Button
        android:id="@+id/quitarFavoritosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipoPokemonTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="105dp"
        android:text="Quitar de favoritos" />

    <Button
        android:id="@+id/volverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="26dp"
        android:text="Volver" />


</RelativeLayout>