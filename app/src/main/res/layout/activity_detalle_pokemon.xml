<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pokedex911.DetallePokemonActivity">

    <TextView
        android:id="@+id/nombrePokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Nombre del Pokémon"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fotoImageView"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tipoPokemonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrePokemonTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Tipo del Pokémon"
        android:textSize="18sp" />

    <!-- Agrega más TextViews para otros detalles del Pokémon (peso, altura, etc.) -->


</RelativeLayout>